{
    "ecmaFeatures": {
        "blockBindings": true,
        "forOf": true,
        "jsx": true,
        "modules": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "semi": 2,
        "no-constant-condition": 1,
        "consistent-return": 0,
        "quotes": [1, "single"],
        "no-constant-condition": 2,
        "strict": [2, "never"],
        "camelcase": 2,
        "space-infix-ops": 2,
        "new-cap": 2,
        "no-underscore-dangle": 0,
        "no-shadow": 2
    },
    "globals": {
      "define": false,
      "Backbone": false,
      "Konva": false,
      "_": false,
      "describe": false,
      "it": false,
      "beforeEach": false,
      "$": false,
      "React": false
	}
}
